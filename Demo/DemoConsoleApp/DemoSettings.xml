<?xml version="1.0" encoding="UTF-8"?>
<demo dataFolder=".\\Data">
  <!-- Modify/Tune existing or add your own cases -->
  <case name="Prediction task High and Low prices of TTOO (T2 Biosystems, Inc.): Single mixed spiking and analog reservoir, Feed Forward, Linear regression">
    <!-- Data from https://finance.yahoo.com/quote/TTOO/history?p=TTOO -->
    <samples fileName="TTOO.csv" bootSamples="300" singleNormalizer="true" normalizerReserve="0.1"/>
    <stateMachineCfg taskType="Prediction" randomizerSeek="0">
      <inputFields routeToReadout="true">
        <field name="High"/>
        <field name="Low"/>
        <field name="Adj Close"/>
      </inputFields>
      <reservoirCfgContainer>
        <reservoirCfg name="1x spiking pool, 1x analog pool" refractoryCycles="1" spectralRadius="1">
          <pool instanceName="SpikingBiLIFs" dimX="5" dimY="5" dimZ="4">
            <input connectionDensity="1">
              <weight min="-0.4" max="0.4"/>
            </input>
            <activation function="BiLIF"/>
            <bias min="0" max="0" randomSign="false" distribution="Uniform"/>
            <interconnection density="0.25" avgDistance="NA">
              <weight min="-1" max="1"/>
            </interconnection>
          </pool>
          <pool instanceName="AnalogTanHs" dimX="5" dimY="5" dimZ="4">
            <input connectionDensity="1">
              <weight min="-0.4" max="0.4"/>
            </input>
            <activation function="TanH"/>
            <bias min="0" max="0" randomSign="false" distribution="Uniform"/>
            <interconnection density="0.1" avgDistance="NA">
              <weight min="-1" max="1"/>
            </interconnection>
          </pool>
          <poolsInterConn srcPool="SpikingBiLIFs" srcConnDensity="0.1" targetPool="AnalogTanHs" targetConnDensity="0.25">
            <weight min="-1" max="1"/>
          </poolsInterConn>
          <poolsInterConn srcPool="AnalogTanHs" srcConnDensity="0.1" targetPool="SpikingBiLIFs" targetConnDensity="0.25">
            <weight min="-1" max="1"/>
          </poolsInterConn>
        </reservoirCfg>
      </reservoirCfgContainer>
      <reservoirInstanceContainer>
        <reservoirInstance name="Main" cfg="1x spiking pool, 1x analog pool" augmentedStates="false">
          <inputFields>
            <field name="High"/>
            <field name="Low"/>
            <field name="Adj Close"/>
          </inputFields>
        </reservoirInstance>
      </reservoirInstanceContainer>
      <readoutLayer testDataRatio="0.1" folds="Auto">
        <readoutUnit attempts="1" attemptEpochs="100">
          <ff regressionMethod="Linear">
            <outputActivation function="Identity"/>
            <linRegrTrainer hiNoiseIntensity="0.2" maxStretch="6" zeroMargin="0.5"/>
          </ff>
        </readoutUnit>
        <outputFields>
          <field name="High"/>
          <field name="Low"/>
        </outputFields>
      </readoutLayer>
    </stateMachineCfg>
  </case>
</demo>
