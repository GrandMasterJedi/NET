<?xml version="1.0" encoding="UTF-8"?>
<demo dataFolder=".\\Data">
  <!-- Modify/Tune existing or add your own cases -->
  <case name="Prediction task Mackey Glass chaotic time series: Experimental reservoir, Feed Forward, Linear regression">
    <samples fileName="MackeyGlass.csv" bootSamples="600" singleNormalizer="false" normalizerReserve="0.1"/>
    <stateMachineCfg taskType="Prediction" randomizerSeek="0">
      <inputFields routeToReadout="false">
        <field name="Value"/>
      </inputFields>
      <reservoirCfgContainer>
        <reservoirCfg name="Spiking" inputCoding="Analog" spikes="1" refractoryCycles="0" spectralRadius="0.999">
          <pools>
            <pool instanceName="Spiking pool" dimX="5" dimY="6" dimZ="10">
              <input connectionDensity="1">
                <weight min="0" max="0.2" randomSign="false" distribution="Uniform"/>
              </input>
              <excitatory portion="3">
                <activation function="LIF"
                            arg1="0.95"
                            arg2="35"
                            arg3="-70"
                            arg4="-68"
                            arg5="-62"
                            arg6="0"
                            />
                <bias min="0" max="0" randomSign="false" distribution="Uniform"/>
              </excitatory>
              <inhibitory portion="1">
                <activation function="LIF"
                            arg1="0.95"
                            arg2="35"
                            arg3="-70"
                            arg4="-68"
                            arg5="-62"
                            arg6="0"
                            />
                <bias min="0" max="0" randomSign="false" distribution="Uniform"/>
              </inhibitory>
              <interconnection density="0.1" avgDistance="NA" allowSelfConnection="false">
                <weight min="0" max="1" randomSign="false" distribution="Uniform"/>
              </interconnection>
            </pool>
          </pools>
        </reservoirCfg>
        <reservoirCfg name="Analog" inputCoding="Analog" spikes="1" refractoryCycles="0" spectralRadius="0.999">
          <pools>
            <pool instanceName="Analog pool" dimX="5" dimY="6" dimZ="10">
              <input connectionDensity="1">
                <weight min="0" max="1" randomSign="false" distribution="Uniform"/>
              </input>
              <excitatory portion="1">
                <activation function="Sigmoid"/>
                <bias min="0" max="0.4" randomSign="true" distribution="Uniform"/>
              </excitatory>
              <inhibitory portion="1">
                <activation function="Gaussian"/>
                <bias min="0" max="0.4" randomSign="true" distribution="Uniform"/>
              </inhibitory>
              <interconnection density="0.1" avgDistance="NA" allowSelfConnection="true">
                <weight min="0" max="1" randomSign="true" distribution="Uniform"/>
              </interconnection>
              <retainmentNeurons density="1" retainmentMinRate="0.25" retainmentMaxRate="0.5"/>
            </pool>
          </pools>
        </reservoirCfg>
      </reservoirCfgContainer>
      <reservoirInstanceContainer>
        <reservoirInstance name="Experimental" cfg="Analog" augmentedStates="false">
          <inputFields>
            <field name="Value"/>
          </inputFields>
        </reservoirInstance>
      </reservoirInstanceContainer>
      <readoutLayer testDataRatio="0.3" folds="1">
        <readoutUnit attempts="1" attemptEpochs="100">
          <ff regressionMethod="Linear">
            <outputActivation function="Identity"/>
          </ff>
        </readoutUnit>
        <outputFields>
          <field name="Value"/>
        </outputFields>
      </readoutLayer>
    </stateMachineCfg>
  </case>
  <case name="Prediction task High and Low prices of TTOO (T2 Biosystems, Inc.): Experimental reservoir, Feed Forward, Linear regression">
    <!-- Data from https://finance.yahoo.com/quote/TTOO/history?p=TTOO -->
    <samples fileName="TTOO.csv" bootSamples="300" singleNormalizer="true" normalizerReserve="0.1"/>
    <stateMachineCfg taskType="Prediction" randomizerSeek="0">
      <inputFields routeToReadout="true">
        <field name="High"/>
        <field name="Low"/>
        <field name="Adj Close"/>
      </inputFields>
      <reservoirCfgContainer>
        <reservoirCfg name="Spiking" inputCoding="Analog" spikes="1" refractoryCycles="0" spectralRadius="0.999">
          <pools>
            <pool instanceName="Spiking pool" dimX="5" dimY="5" dimZ="5">
              <input connectionDensity="1">
                <weight min="0" max="1" randomSign="false" distribution="Uniform"/>
              </input>
              <excitatory portion="6">
                <activation function="LIF"
                            arg1="2"
                            arg2="10"
                            arg3="-70"
                            arg4="-64"
                            arg5="-60"
                            arg6="0"
                            />
                <bias min="0" max="0" randomSign="false" distribution="Uniform"/>
              </excitatory>
              <inhibitory portion="1">
                <activation function="LIF"
                            arg1="2"
                            arg2="10"
                            arg3="-70"
                            arg4="-64"
                            arg5="-60"
                            arg6="0"
                            />
                <bias min="0" max="0" randomSign="false" distribution="Uniform"/>
              </inhibitory>
              <interconnection density="0.3" avgDistance="1.5" allowSelfConnection="true">
                <weight min="0" max="1" randomSign="false" distribution="Uniform"/>
              </interconnection>
            </pool>
          </pools>
        </reservoirCfg>
        <reservoirCfg name="Analog" refractoryCycles="0" spectralRadius="0.999">
          <pools>
            <pool instanceName="Analog pool" dimX="5" dimY="5" dimZ="5">
              <input connectionDensity="1">
                <weight min="0" max="0.75" randomSign="false" distribution="Uniform"/>
              </input>
              <excitatory portion="1">
                <activation function="Sigmoid"/>
                <bias min="0" max="0.4" randomSign="true" distribution="Uniform"/>
              </excitatory>
              <inhibitory portion="1">
                <activation function="Sigmoid"/>
                <bias min="0" max="0.4" randomSign="true" distribution="Uniform"/>
              </inhibitory>
              <interconnection density="0.1" avgDistance="NA" allowSelfConnection="true">
                <weight min="0" max="1" randomSign="true" distribution="Uniform"/>
              </interconnection>
              <retainmentNeurons density="1" retainmentMinRate="0.25" retainmentMaxRate="0.5"/>
            </pool>
          </pools>
        </reservoirCfg>
        <reservoirCfg name="Mixed" refractoryCycles="0" spectralRadius="0.999">
          <pools>
            <pool instanceName="Spiking pool" dimX="5" dimY="5" dimZ="5">
              <input connectionDensity="1">
                <weight min="0" max="1" randomSign="false" distribution="Uniform"/>
              </input>
              <excitatory portion="6">
                <activation function="LIF"
                            arg1="2"
                            arg2="10"
                            arg3="-70"
                            arg4="-64"
                            arg5="-60"
                            arg6="0"
                            />
                <bias min="0" max="0" randomSign="false" distribution="Uniform"/>
              </excitatory>
              <inhibitory portion="1">
                <activation function="LIF"
                            arg1="2"
                            arg2="10"
                            arg3="-70"
                            arg4="-64"
                            arg5="-60"
                            arg6="0"
                            />
                <bias min="0" max="0" randomSign="false" distribution="Uniform"/>
              </inhibitory>
              <interconnection density="0.3" avgDistance="1.5" allowSelfConnection="true">
                <weight min="0" max="1" randomSign="false" distribution="Uniform"/>
              </interconnection>
            </pool>
            <pool instanceName="Analog pool" dimX="5" dimY="5" dimZ="5">
              <input connectionDensity="1">
                <weight min="0" max="0.5" randomSign="false" distribution="Uniform"/>
              </input>
              <excitatory portion="6">
                <activation function="Sigmoid"/>
                <bias min="0" max="0" randomSign="true" distribution="Uniform"/>
              </excitatory>
              <inhibitory portion="1">
                <activation function="Sigmoid"/>
                <bias min="0" max="0" randomSign="true" distribution="Uniform"/>
              </inhibitory>
              <interconnection density="0.2" avgDistance="NA" allowSelfConnection="true">
                <weight min="0" max="1" randomSign="true" distribution="Uniform"/>
              </interconnection>
              <retainmentNeurons density="1" retainmentMinRate="0" retainmentMaxRate="0.5"/>
            </pool>
          </pools>
          <pool2PoolConns>
            <pool2PoolConn targetPool="Spiking pool" targetConnDensity="0.25" srcPool="Analog pool" srcConnDensity="0.1">
              <weight min="0" max="0.3" randomSign="false" distribution="Uniform"/>
            </pool2PoolConn>
            <pool2PoolConn targetPool="Analog pool" targetConnDensity="0.25" srcPool="Spiking pool" srcConnDensity="0.25">
              <weight min="0" max="0.3" randomSign="false" distribution="Uniform"/>
            </pool2PoolConn>
          </pool2PoolConns>
        </reservoirCfg>
      </reservoirCfgContainer>
      <reservoirInstanceContainer>
        <reservoirInstance name="Experimental" cfg="Spiking" augmentedStates="false">
          <inputFields>
            <field name="High"/>
            <field name="Low"/>
            <field name="Adj Close"/>
          </inputFields>
        </reservoirInstance>
        <reservoirInstance name="Experimental" cfg="Analog" augmentedStates="false">
          <inputFields>
            <field name="High"/>
            <field name="Low"/>
            <field name="Adj Close"/>
          </inputFields>
        </reservoirInstance>
      </reservoirInstanceContainer>
      <readoutLayer testDataRatio="0.1" folds="Auto">
        <readoutUnit attempts="1" attemptEpochs="100">
          <ff regressionMethod="Linear">
            <outputActivation function="Identity"/>
            <linRegrTrainer hiNoiseIntensity="0.2" maxStretch="6" zeroMargin="0.5"/>
          </ff>
        </readoutUnit>
        <outputFields>
          <field name="High"/>
          <field name="Low"/>
        </outputFields>
      </readoutLayer>
    </stateMachineCfg>
  </case>
</demo>
