<?xml version="1.0" encoding="UTF-8"?>
<esnDemo dataFolder=".\\Data">
  <!-- Modify/Tune existing or add your own cases -->
  <case name="Prediction task High and Low prices of SPXL (Direxion Daily SP500 Bull 3X ETF): Reservoir instance for each input field, Feed Forward, Resilient">
    <!-- Data from https://finance.yahoo.com/quote/SPXL/history?p=SPXL -->
    <samples fileName="SPXL.csv" bootSamples="400" singleNormalizer="true" normalizerReserve="0.1"/>
    <esnCfg taskType="Prediction" randomizerSeek="0">
      <inputFields routeToReadout="true">
        <field name="High"/>
        <field name="Low"/>
        <field name="Adj Close"/>
      </inputFields>
      <reservoirCfgContainer>
        <reservoirCfg name="Random topology of 200 TanH neurons">
          <input connectionDensity="1">
            <weight min="-0.9" max="0.9"/>
          </input>
          <internal size="200" activation="TanH" spectralRadius="0.79">
            <topologyRandom connectionsDensity="0.1"/>
            <bias min="0" max="0"/>
            <weight min="-1" max="1"/>
            <retainmentNeurons density="1" retainmentMinRate="0" retainmentMaxRate="0.5"/>
          </internal>
        </reservoirCfg>
        <reservoirCfg name="DTT topology of 200 TanH neurons">
          <input connectionDensity="1">
            <weight min="-0.9" max="0.9"/>
          </input>
          <internal size="200" activation="TanH" spectralRadius="0.79">
            <topologyDTT selfConnectionsDensity="0"/>
            <bias min="0" max="0"/>
            <weight min="-1" max="1"/>
            <retainmentNeurons density="1" retainmentMinRate="0" retainmentMaxRate="0.8"/>
          </internal>
        </reservoirCfg>
      </reservoirCfgContainer>
      <reservoirInstanceContainer>
        <reservoirInstance name="High" cfg="Random topology of 200 TanH neurons" augmentedStates="false">
          <inputFields>
            <field name="High"/>
          </inputFields>
        </reservoirInstance>
        <reservoirInstance name="Low" cfg="Random topology of 200 TanH neurons" augmentedStates="false">
          <inputFields>
            <field name="Low"/>
          </inputFields>
        </reservoirInstance>
        <reservoirInstance name="Adj Close" cfg="DTT topology of 200 TanH neurons" augmentedStates="false">
          <inputFields>
            <field name="Adj Close"/>
          </inputFields>
        </reservoirInstance>
      </reservoirInstanceContainer>
      <readoutLayer testDataRatio="0.1" folds="Auto">
        <readoutUnit attempts="5" attemptEpochs="200">
          <ff activation="Identity" regressionMethod="Resilient"/>
        </readoutUnit>
        <outputFields >
          <field name="High"/>
          <field name="Low"/>
        </outputFields>
      </readoutLayer>
    </esnCfg>
  </case>
  <case name="Prediction task High and Low prices of SPXL (Direxion Daily SP500 Bull 3X ETF): Single reservoir, Feed Forward, Hidden layer, Resilient">
    <!-- Data from https://finance.yahoo.com/quote/SPXL/history?p=SPXL -->
    <samples fileName="SPXL.csv" bootSamples="400" singleNormalizer="true" normalizerReserve="0.1"/>
    <esnCfg taskType="Prediction" randomizerSeek="0">
      <inputFields routeToReadout="true">
        <field name="High"/>
        <field name="Low"/>
        <field name="Adj Close"/>
      </inputFields>
      <reservoirCfgContainer>
        <reservoirCfg name="DTT topology of 400 TanH neurons">
          <input connectionDensity="1">
            <weight min="-0.5" max="0.5" randomSign="false" distribution="Uniform"/>
          </input>
          <internal size="400" activation="TanH" spectralRadius="NA">
            <topologyDTT selfConnectionsDensity="1"/>
            <bias min="0" max="0"/>
            <weight min="-0.3" max="0.3"/>
            <retainmentNeurons density="0.5" retainmentMinRate="0" retainmentMaxRate="0.75"/>
            <contextNeuron activation="TanH" feedbackDensity="1">
              <inputWeight min="0.05" max="0.05"/>
              <feedbackWeight min="-0.3" max="0.3"/>
            </contextNeuron>
          </internal>
        </reservoirCfg>
      </reservoirCfgContainer>
      <reservoirInstanceContainer>
        <reservoirInstance name="Main" cfg="DTT topology of 400 TanH neurons" augmentedStates="false">
          <inputFields>
            <field name="High"/>
            <field name="Low"/>
            <field name="Adj Close"/>
          </inputFields>
        </reservoirInstance>
      </reservoirInstanceContainer>
      <readoutLayer testDataRatio="0.1" folds="Auto">
        <readoutUnit attempts="2" attemptEpochs="700">
          <ff activation="Identity" regressionMethod="Resilient">
            <hiddenLayer neurons="10" activation="TanH"/>
          </ff>
        </readoutUnit>
        <outputFields>
          <field name="High"/>
          <field name="Low"/>
        </outputFields>
      </readoutLayer>
    </esnCfg>
  </case>
